# -----------------------------------------------------------------------------
# FitBooks Website environment template
# Copy to .env.local and replace placeholder values.
# Never commit real secrets.
# -----------------------------------------------------------------------------

# Public values (safe to expose to browser)
NEXT_PUBLIC_SANITY_PROJECT_ID="your_sanity_project_id"
NEXT_PUBLIC_SANITY_DATASET="production"
NEXT_PUBLIC_SANITY_API_VERSION="2026-02-04"
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your_turnstile_site_key"

# Server-only secrets and runtime config
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL="gpt-5-nano"
HUBSPOT_PRIVATE_APP_TOKEN="your_hubspot_private_app_token"
HUBSPOT_PORTAL_ID="your_hubspot_portal_id"
HUBSPOT_FORM_GUID="your_hubspot_form_guid"
TURNSTILE_SECRET_KEY="your_turnstile_secret_key"
CONTACT_EMAIL="hello@example.com"
CONTACT_PHONE="+1-000-000-0000"

# Optional hardening controls
TURNSTILE_EXPECTED_ACTION="lead_submit"
TURNSTILE_ALLOWED_HOSTNAMES="example.com,www.example.com"
ENABLE_STUDIO="false"

# Optional script-only variables
HUBSPOT_ACCESS_TOKEN="your_hubspot_access_token"
HUBSPOT_DEALS_PIPELINE_LABEL="FitBooks Sales"
HUBSPOT_PIPELINE_MAP_FILE="./config/hubspot.pipeline.json"
